<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_row2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14sp">

    <TextView
        android:id="@+id/id_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="John"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/id_txt2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Rojek"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/firstName2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/albumNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="212312"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_txt2" />
</androidx.constraintlayout.widget.ConstraintLayout>